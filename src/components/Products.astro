---
import { products } from "./ProductsList.astro";
import { Image } from "astro:assets";
import "swiper/swiper-bundle.css";
---

<div id="products-section">
  <div class="products-header">
    <h2 class="products-title">Computadores y periféricos para</h2>
    <h3 class="products-subtitle">Gaming/ Diseño / Animación / Ingeniería</h3>
  </div>
  <div class="products-cards_container">
    {
      products.map((p) => (
        <div class="product-card">
          <div class="product-card_body">
            <div class="product-img">
              <Image
                class="product_img"
                src={p.image}
                alt={p.name}
                width={250}
                height={250}
              />
            </div>
            <div class="product-card_body_info">
              <h4>{p.name}</h4>
              <p>{p.description}</p>
            </div>
            <a href={`products/${p.id}`} class="primary-button">Ver mas</a>
          </div>
        </div>
      ))
    }
  </div>
</div>

<style>
  #products-section {
    background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)),
      url("../assets/images/pexels-photo-3165335.jpeg");
    background-repeat: no-repeat;
    background-attachment: fixed;
    background-size: cover;
    background-position: center;
    padding: 80px 20px;
  }

  .products-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .products-title {
    font-size: 1.5rem;
    color: #ffffff;
    font-weight: 400;
    margin-bottom: 12px;
  }

  .products-subtitle {
    font-size: 2rem;
    color: #ffffff;
    letter-spacing: 1px;
  }

  .products-cards_container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(270px, 1fr));
    gap: 40px;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .product-card {
    width: 100%;
    background: radial-gradient(circle at top right, #2c2d50e8, #1a1b30e8);
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 0 4px #ffffffa9;
  }

  .product-card_body {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 16px;
  }

  .product-img {
    height: 250px;
    width: 250px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .product_img {
    max-width: 100%;
    height: auto;
    object-fit: contain;
    filter: drop-shadow(0px 0px 6px #ffffff50);
  }

  .product-card_body_info {
    text-align: center;
  }

  .product-card_body_info h4 {
    font-size: 1.3rem;
    color: #ffffff;
    margin-bottom: 12px;
    font-weight: 600;
  }

  .product-card_body_info p {
    font-size: 1rem;
    color: #e0e0e0;
    margin-bottom: 20px;
    line-height: 1.6;
  }
</style>
