---
import pc1 from "../assets/images/modern-gaming-pc-isolated-on-transparent-free-png 2.png";
import { Image } from "astro:assets";

const products = [
  {
    id: 1,
    name: "PC Gamer RTX 4090",
    description: "Potencia extrema para los juegos más exigentes.",
    image: pc1,
  },
  {
    id: 2,
    name: "Laptop Ultra Slim",
    description: "Rendimiento y portabilidad en un diseño elegante.",
    image: pc1,
  },
  {
    id: 3,
    name: "Teclado Mecánico RGB",
    description: "Iluminación RGB y switches de alto rendimiento.",
    image: pc1,
  },
  {
    id: 4,
    name: "Mouse Gamer Pro",
    description: "Precisión y velocidad para jugadores competitivos.",
    image: pc1,
  },
];
---

<div id="products-section">
  <div>
    <h2 class="products-title">#1 En computadores y componentes</h2>
    <h3 class="products-subtitle">Diseño / Animación / Ingeniería</h3>
  </div>
  <div class="products-container">
    {
      products.map((p) => (
        <div class="product-card">
          <div class="product-card_body">
            <div class="product-img">
              <Image
                class="product_img"
                src={p.image}
                alt={p.name}
                width={300}
                height={300}
              />
            </div>
            <div class="product-card_body_info">
              <h4>{p.name}</h4>
              <p>{p.description}</p>
              <button class="primary-button">Más</button>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</div>
<style>
  #products-section {
    background: linear-gradient(rgba(0, 0, 0, 0.445), rgba(0, 0, 0, 0.445)),
      url("../assets/images/pexels-photo-3165335.jpeg");
    background-repeat: no-repeat;
    background-attachment: fixed;
    background-size: 100%;
    padding: 50px 100px 50px 100px;
  }
  .products-title {
    text-align: center;
    font-size: 1.43rem;
    color: var(--text-dark);
  }
  .products-subtitle {
    text-align: center;
    font-size: 2rem;
    color: var(--text-dark);
    margin-bottom: 18px;
  }
  .products-container {
    padding: 110px 6px 12px 6px;
    display: flex;
    overflow-x: scroll;
    gap: 18px;
    scrollbar-width: none;
  }
  .product-card {
    position: relative;
    width: 350px;
    height: 340px;
    display: flex;
    align-items: flex-end;
    border-radius: 12px;
    padding: 18px;
    background: radial-gradient(circle at top right, #2c2d50e8, #1a1b30e8);
    box-shadow: 0 0 6px 1px #fefefe6b;
  }
  .product-img {
    object-fit: contain;
    top: -100px;
    position: absolute;
    display: flex;
    left: 50%;
    transform: translateX(-50%);
    width: 100%;
    justify-content: center;
    align-items: center;
  }
  .product_img {
    object-fit: contain;
  }
  .product-card_body_info h4 {
    font-size: 18px;
  }
</style>
